@{
    <style>
    .tabs{
            visibility: hidden;
    }
    </style>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    <div class="row " style="margin-top: 5%; flex: 1">
        <h1 class="d-flex justify-content-center mb-4" style="font-size: 50px; font-weight: bolder; color: #00c5cd;">Giriş Yap</h1>
        <div class="col-2 col-sm-4">
        </div>
        <div class="col">
            <form method="get" action="/Account/Login">
                @Html.AntiForgeryToken()
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="email" class="form-control" name="email" placeholder="E posta" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" />

                </div>

                <!-- Submit button -->
                <div class="row d-flex justify-content-center m-1 ">
                    <button type="submit" class="btn btn-block mb-4" style="width: 50%; background-color: #00c5cd; color: white;">Giriş Yap</button>
                </div>
                <div class="row d-flex justify-content-center m-1 ">
                    <a type="button" href="/register" class="btn btn-block mb-4" style="width: 50%; color: #00868b;">Kayıt Ol</a>
                </div>
            </form>
        </div>
        <div class="col-2 col-sm-4">
        </div>
    </div>
}
