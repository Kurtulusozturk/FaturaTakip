@{
    <form>
        <div class="row mt-4" style=" flex: 1; margin-left: 0px;margin-right: 0px;">
            <div class="col-0 col-sm-1">
            </div>
            <div class="col" style="padding-left: 0px; padding-right: 0px;">
                <div class="row d-flex">
                    <div class="col-6 pe-1">
                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Şirket İsmi: </label>
                            <input type="text" id="SirketAdı" class="form-control" placeholder="Şirket İsmi (*)" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Telefon No: </label>
                            <input type="number" id="TelefonNo" class="form-control" placeholder="Telefon No (*)" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> E posta: </label>
                            <input type="email" id="Eposta" class="form-control" placeholder="E posta (*)" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;">Şifre: </label>
                            <input type="password" id="Sifre" class="form-control" placeholder="Şifre (*)" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Yeni Şifre (Şifrenizi Değiştirmek İstemezseniz Bu Alanı Boş Bırakın): </label>
                            <input type="password" id="SifreDogrulama" class="form-control" placeholder="Şifre Doğrulama (*)" />
                        </div>
                    </div>
                    <div class="col-6 ps-1">
                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Adres: </label>
                            <input type="text" id="Adres" class="form-control" placeholder="Adres" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Web Adresi: </label>
                            <input type="text" id="WebAdresi" class="form-control" placeholder="Web Adresi" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Vergi Dairesi: </label>
                            <input type="text" id="VergiDairesi" class="form-control" placeholder="Vergi Dairesi" />
                        </div>

                        <div class="form-outline mb-1">
                            <label for="" class="ms-1" style="color: #00688b;"> Vergi Kimlik No: </label>
                            <input type="email" id="VergiKimlikNo" class="form-control" placeholder="Vergi Kimlik No" />
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-between m-1">
                    <button type="button" class="btn" id="mustBeUnvisibleAddScreen" style="width: 25%; background-color: #cd5555; color: white;">Sil</button>
                    <button type="button" class="btn" style="width: 25%; background-color: #43cd80; color: white;">Onayla</button>
                </div>
            </div>
            <div class="col-0 col-sm-1">
            </div>
        </div>
    </form>
    
}
